doctype html

mixin item(title,url)
  li(class='listItem')
    a(href=url class=path == url ? 'active' : "")=title


html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    span=path
    ul
      +item('Strona główna', '/')   
      +item('Aktualności', '/news')   
      +item('Quiz', '/quiz')   
      +item('Admin', '/admin')   


    block content
